{% extends '::base.html.twig' %}
{% block body -%}
    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{ entity.title }}</h1>

                

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-eur"></span> {{ entity.price }} a month</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                <hr>
                <p><strong>Available from {{entity.availableFrom|date('D d M') }}</strong></p>
                        <hr>
                <!-- Post Content -->
                <h2>Description</h2>
                <p>{{ entity.description }}</p>

                <hr>
                <img src="http://maps.googleapis.com/maps/api/staticmap?center={{ entity.address | url_encode }}&markers=color:red%7Ccolor:red%7C{{ entity.address | url_encode }}&zoom=14&size=1200x300&maptype=roadmap&sensor=false" />
                <!-- Blog Comments -->
                <hr />
                <!-- Comments Form -->
              

               

                
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                
                <!-- Blog Search Well -->
                <div class="well">
                    <h2>Contact the owner</h2>
               {{ render(controller('RoomrentBundle:Room:contact', { 'id': entity.id })) }}
                      
                    </div>
                    <!-- /.input-group -->
                </div>

             

               

            </div>

        </div>
        <!-- /.row -->

            

        <ul class="record_actions">
    <li>
        <a href="{{ path('room') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('room_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
